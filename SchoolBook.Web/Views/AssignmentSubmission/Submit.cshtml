@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SchoolBook.Web.ViewModels.AssignmentSubmission.SubmitAssignmentViewModel

<div class="submission-container">
    <h2 class="page-title">Submit Assignment</h2>

    <div class="assignment-details">
        <h3>@Model.AssignmentTitle</h3>
        <p><strong>Class:</strong> @Model.ClassName</p>
        <p><strong>Student:</strong> @Model.StudentName</p>
    </div>

    <form asp-action="Submit" method="post">
        <input type="hidden" asp-for="Id" />
        <textarea asp-for="SubmissionContent" class="form-control" rows="5" placeholder="Enter your assignment content here..."></textarea>
        <span asp-validation-for="SubmissionContent" class="text-danger"></span>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>