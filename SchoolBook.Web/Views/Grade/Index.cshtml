@model IEnumerable<SchoolBook.Web.ViewModels.Grade.GradeIndexViewModel>

@{
    ViewData["Title"] = "Grades";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">📚 Grades Overview 📊</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Evaluation Name</th>
                <th scope="col">Graded Date</th>
                <th scope="col">Exam</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                int counter = 1;
                foreach (var grade in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@grade.EvaluationName</td>
                        <td>@grade.GradedDate.ToString("dd MMM yyyy")</td>
                        <td>@grade.ExamName</td>
                        <td>
                            <a asp-controller="Grade" asp-action="Details" asp-route-id="@grade.Id" class="btn btn-info">
                                <i class="bi bi-plus"></i> Details
                            </a>
                        </td>
                    </tr>
                    counter++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-danger">No grades available 😔</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>