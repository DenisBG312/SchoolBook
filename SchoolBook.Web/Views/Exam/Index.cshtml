@using Microsoft.AspNetCore.Identity
@using SchoolBook.Data.Models

@model List<SchoolBook.Web.ViewModels.Exam.ExamIndexViewModel>

@{
    ViewData["Title"] = "Exams";
}

<link rel="stylesheet" href="css/exam-index.css"/>

<div class="container mt-5 shadow-lg rounded bg-light p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-custom-primary fw-bold">📚 Exams Overview</h1>
        <a asp-controller="Exam" asp-action="Create" class="btn btn-custom-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add Exam
        </a>
    </div>

    <div class="input-group mb-4 search-bar shadow-sm">
        <input type="text" class="form-control" placeholder="Search exams by subject or date..." aria-label="Search exams">
        <button class="btn btn-custom-primary" type="button">
            <i class="bi bi-search"></i> Search
        </button>
    </div>

    <table class="table table-custom shadow-sm rounded">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Subject</th>
                <th scope="col">Start Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <th scope="row">@exam.Id</th>
                    <td>@exam.SubjectName</td>
                    <td>@exam.ExamDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-controller="Exam" asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Exam" asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
