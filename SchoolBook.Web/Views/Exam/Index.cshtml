@using Microsoft.AspNetCore.Identity
@using SchoolBook.Data.Models
@model List<SchoolBook.Web.ViewModels.Exam.ExamIndexViewModel>
@{
    ViewData["Title"] = "Exams";
}

<link rel="stylesheet" href="~/css/exam-index.css"/>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-lg">
                <div class="card-body p-4">
                    <!-- Header Section -->
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-graduation-cap fs-2 text-primary"></i>
                            </div>
                            <h1 class="h3 mb-0 text-primary fw-bold">Exams Overview</h1>
                        </div>
                        <a asp-controller="Exam" asp-action="Create" 
                           class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2 rounded-pill hover-shadow transition">
                            <i class="fa-solid fa-plus"></i>
                            <span>Add Exam</span>
                        </a>
                    </div>

                    <!-- Search Section -->
                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text border-0 bg-light">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" 
                                   class="form-control border-0 bg-light py-2 px-3" 
                                   placeholder="Search exams by subject or date..."
                                   aria-label="Search exams">
                        </div>
                    </div>

                    <!-- Table Section -->
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr class="bg-light">
                                    <th scope="col" class="rounded-start ps-3">#</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col" class="rounded-end text-end pe-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var exam in Model)
                                {
                                    <tr class="border-bottom">
                                        <th scope="row" class="ps-3">@exam.Id</th>
                                        <td>
                                            <span class="fw-medium">@exam.SubjectName</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                @exam.ExamDate.ToString("dd.MM.yyyy")
                                            </span>
                                        </td>
                                        <td class="text-end pe-3">
                                            <div class="btn-group">
                                                <a asp-controller="Exam" 
                                                   asp-action="Edit" 
                                                   asp-route-id="@exam.Id" 
                                                   class="btn btn-sm btn-outline-warning me-2 rounded">
                                                    <i class="fa fa-pencil me-1"></i>
                                                    Edit
                                                </a>
                                                <a asp-controller="Exam" 
                                                   asp-action="Delete" 
                                                   asp-route-id="@exam.Id" 
                                                   class="btn btn-sm btn-outline-danger rounded">
                                                    <i class="fa fa-trash me-1"></i>
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>